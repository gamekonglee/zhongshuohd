<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:text="个人中心"
        android:textColor="#ffffff"
        android:textSize="@dimen/ss64"
        android:layout_marginTop="@dimen/xx120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/xx120"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/xx180"
        android:layout_marginTop="@dimen/xx36"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_cv"
            android:src="@mipmap/icon_head"
            android:layout_width="@dimen/xx120"
            android:layout_height="@dimen/xx120" />
        <LinearLayout
            android:layout_marginLeft="@dimen/xx24"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nickname_tv"
                android:text="nickname"
                android:textColor="#ffffff"
                android:textSize="@dimen/ss36"
                android:lines="1"
                android:layout_width="@dimen/xx250"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/level_tv"
                android:text="1级"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/xx6"
                android:textSize="@dimen/ss36"
                android:lines="1"
                android:layout_width="@dimen/xx250"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_change"
            android:layout_marginLeft="@dimen/xx30"
            android:text="修改"
            android:textSize="@dimen/ss36"
            android:textColor="@color/orange_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/payment_rl"
            android:layout_marginLeft="@dimen/xx150"
            android:layout_width="@dimen/xx200"
            android:layout_height="@dimen/xx90">
            <TextView
                android:id="@+id/ordert_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="待付款"
                android:textColor="#fff"
                android:textSize="@dimen/ss36"
                android:gravity="center"
                android:paddingTop="@dimen/xx9"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/xx9"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="@dimen/xx200"
                android:layout_height="@dimen/xx68" />
            <TextView
                android:id="@+id/unMessageReadTv"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:lines="1"
                android:textSize="@dimen/ss24"
                android:layout_width="@dimen/xx42"
                android:layout_height="@dimen/xx42" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/delivery_rl"
            android:layout_marginLeft="@dimen/xx60"
            android:layout_width="@dimen/xx200"
            android:layout_height="@dimen/xx90">
            <TextView

                android:text="待发货"
                android:textColor="#fff"
                android:textSize="@dimen/ss36"
                android:gravity="center"
                android:paddingTop="@dimen/xx9"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/xx9"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="@dimen/xx200"
                android:layout_height="@dimen/xx68"/>
            <TextView
                android:id="@+id/unMessageRead02Tv"
                android:visibility="gone"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ss24"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:lines="1"
                android:layout_width="@dimen/xx42"
                android:layout_height="@dimen/xx42" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Receiving_rl"
            android:layout_marginLeft="@dimen/xx60"
            android:layout_marginRight="@dimen/xx20"
            android:layout_width="@dimen/xx200"
            android:layout_height="@dimen/xx90">
            <TextView
                android:text="待收货"
                android:textColor="#fff"
                android:textSize="@dimen/ss36"
                android:gravity="center"
                android:paddingTop="@dimen/xx9"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/xx9"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="@dimen/xx200"
                android:layout_height="@dimen/xx68"/>
            <TextView
                android:id="@+id/unMessageRead03Tv"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_dot_red"
                android:gravity="center"
                android:lines="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/ss24"
                android:layout_width="@dimen/xx42"
                android:layout_height="@dimen/xx42" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xx50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300">
            <ImageView
                android:id="@+id/iv_order"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/xx300"
                android:layout_height="@dimen/xx300" />
            <TextView
                android:id="@+id/order_rl"
                android:text="我的订单"
                android:textSize="@dimen/ss48"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="@dimen/xx300"
                android:layout_height="@dimen/xx300" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/xx20"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300">
        <ImageView
            android:id="@+id/iv_address"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        <TextView
            android:id="@+id/address_rl"
            android:text="收货地址"
            android:textSize="@dimen/ss48"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/xx300"
            android:layout_marginLeft="@dimen/xx20"
            android:layout_height="@dimen/xx300">
        <ImageView
            android:id="@+id/iv_logistcs"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        <TextView
            android:id="@+id/stream_rl"
            android:text="我的物流"
            android:textSize="@dimen/ss48"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/xx20"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300">
        <ImageView
            android:id="@+id/iv_collect"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        <TextView
            android:id="@+id/collect_rl"
            android:text="我的收藏"
            android:textSize="@dimen/ss48"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/xx20"
            android:layout_width="@dimen/xx300"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/xx300">
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        <TextView
            android:id="@+id/tv_setting"
            android:text="设置"
            android:textSize="@dimen/ss48"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/xx300"
            android:layout_height="@dimen/xx300" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>