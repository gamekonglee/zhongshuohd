<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="@dimen/xx790"
    android:id="@+id/view"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="@dimen/xx80"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx260">

            <RelativeLayout
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx200">


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/xx20"
                android:layout_marginLeft="@dimen/xx240">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:text=""
                        android:textColor="#333333"
                        android:textSize="@dimen/ss36"
                        android:layout_marginTop="@dimen/xx50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/xx20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_price"
                            android:text="¥000.00"
                            android:textColor="@color/orange_theme"
                            android:textSize="@dimen/ss36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_stock"
                            android:text="(库存：)"
                            android:textSize="@dimen/ss26"
                            android:textColor="#999999"
                            android:layout_marginLeft="@dimen/xx10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_has_choose"
                        android:text=""
                        android:layout_marginTop="@dimen/xx20"
                        android:textSize="@dimen/ss26"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_no"
                        android:text="商品编号：000000"
                        android:textColor="#81838E"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_price"
                        android:layout_marginTop="@dimen/xx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <RelativeLayout
                    android:id="@+id/rl_dismiss"
                    android:layout_marginRight="@dimen/xx40"
                    android:layout_marginTop="@dimen/xx50"
                    android:layout_width="@dimen/xx37"
                    android:layout_height="@dimen/xx37">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_cancel"
                        android:layout_width="@dimen/xx37"
                        android:layout_height="@dimen/xx37" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_goods"
                android:layout_marginLeft="@dimen/xx15"
                android:background="@drawable/bg_corner_trans_white_full_10"
                android:layout_width="@dimen/xx200"
                android:layout_height="@dimen/xx200">
                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/xx200"
                    android:layout_height="@dimen/xx200" />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:background="@color/grey_text_color_normal"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ScrollView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_skulist"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/xx5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/xx50"/>
                </FrameLayout>
                <View
                    android:background="@color/lines_tab_grey_C3C3C3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:visibility="gone"
                    android:background="#ffffff"
                    android:padding="@dimen/xx15"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="数量："
                        android:textColor="#333333"
                        android:textSize="@dimen/ss36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/xx10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_reduce"
                            android:text="—"
                            android:textColor="#999999"
                            android:textSize="@dimen/ss50"
                            android:gravity="center"
                            android:background="#efefef"
                            android:layout_width="@dimen/xx70"
                            android:layout_height="@dimen/xx70" />
                        <TextView
                            android:id="@+id/et_num"
                            android:text="1"
                            android:textColor="#333333"
                            android:inputType="number"
                            android:background="@drawable/bg_corner_efefef_0"
                            android:textSize="@dimen/ss30"
                            android:gravity="center"
                            android:layout_width="@dimen/xx150"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_add"
                            android:text="+"
                            android:textColor="#999999"
                            android:textSize="@dimen/ss50"
                            android:gravity="center"
                            android:background="#efefef"
                            android:layout_width="@dimen/xx70"
                            android:layout_height="@dimen/xx70" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:background="@color/lines_tab_grey_C3C3C3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_to_shopcar"
        android:text="随意配配看"
        android:textSize="@dimen/ss36"
        android:textColor="#fff"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/orange_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx80" />
</FrameLayout>