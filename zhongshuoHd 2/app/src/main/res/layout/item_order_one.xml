<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical"
    android:id="@+id/order_lv"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/order_shape_active"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/fontColor6"
                android:textSize="25dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            >

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryRed"
                android:textSize="25dp"/>




            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/fontColor6"
                android:textSize="25dp"
                />
        </RelativeLayout>

        <View
            style="@style/view_style"

            />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <View
            style="@style/view_style"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <TextView
                android:id="@+id/old_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/fontColora"
                android:textSize="23dp"
                />

            <TextView
                android:id="@+id/new_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/old_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/red"
                android:textSize="23dp"
                />

            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/fontColora"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_money"
                android:layout_marginTop="3dp"
                android:textColor="@color/fontColora"
                android:textSize="12dp"
                />

        </RelativeLayout>
        <View
            style="@style/view_style"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >

            <TextView
                android:id="@+id/do_tv"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.0"
                android:layout_marginRight="10dp"
                android:background="@drawable/classify_shape_active"
                android:gravity="center"
                android:text="@string/pay"
                android:textColor="@color/green"
                android:textSize="20dip"/>
            <TextView
                android:id="@+id/do02_tv"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/do_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:background="@drawable/order02_shape_active"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/txt_black"
                android:textSize="20dip"/>
            <TextView
                android:id="@+id/do03_tv"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/do02_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:background="@drawable/order02_shape_active"
                android:gravity="center"
                android:text="联系卖家"
                android:textColor="@color/txt_black"
                android:textSize="20dip"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
</LinearLayout>