<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:background="@mipmap/bg_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="待发货"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="60dp">
<ScrollView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lib.common.hxp.view.ListViewForScrollView
            android:id="@+id/order_detail_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
</ScrollView>
        <ScrollView
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/logistics_name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:background="@drawable/bg_corner_white_full_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="center_vertical"
                        android:padding="30dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="收货人:"
                            android:textColor="#999999"
                            android:textSize="36sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/consignee_tv"
                            android:text="aaa"
                            android:textColor="#444444"
                            android:textSize="36sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/phone_tv"
                            android:text="00000"
                            android:textColor="#444444"
                            android:textSize="36sp"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:text="收货地址:"
                        android:textColor="#999999"
                        android:textSize="36sp"
                        android:layout_margin="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/address_tv"
                        android:text="广东省佛山市禅城区季华四路创意产业园1栋副楼636中山铂仓网络科技"
                        android:textSize="36sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/log_rl"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:background="@drawable/bg_corner_white_full_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="center_vertical"
                        android:padding="30dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="物流单号:"
                            android:textColor="#999999"
                            android:textSize="36sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/log_sv_tv"
                            android:text="aaa"
                            android:textColor="#444444"
                            android:textSize="36sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="00000"
                            android:textColor="#444444"
                            android:textSize="36sp"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:text="物流备注:"
                        android:textColor="#999999"
                        android:textSize="36sp"
                        android:layout_margin="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/log_remark_tv"
                        android:text="广东省佛山市禅城区季华四路创意产业园1栋副楼636中山铂仓网络科技"
                        android:textSize="36sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>
    <ImageView
        android:id="@+id/topLeftBtn"
        android:onClick="goBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="90dp"
        android:src="@mipmap/share_iv"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    </RelativeLayout>