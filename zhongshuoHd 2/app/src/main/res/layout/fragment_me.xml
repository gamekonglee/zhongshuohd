<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:text="个人中心"
    android:textColor="#ffffff"
    android:textSize="64sp"
    android:layout_marginTop="120dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:layout_marginRight="180dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/icon_head"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="nickname"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1级"
                android:textColor="#ffffff"
                android:layout_marginTop="6dp"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="130dp"
            android:text="修改"
            android:textSize="36sp"
            android:visibility="gone"
            android:textColor="@color/orange_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="300dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
            <TextView
                android:text="待付款"
                android:textColor="#fff"
                android:textSize="36sp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="9dp"
                android:background="@drawable/bg_corner_white_500"
                android:layout_width="200dp"
                android:layout_height="68dp" />
            <ImageView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/icon_my_add"
                android:layout_width="42dp"
                android:layout_height="42dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="60dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
        <TextView
            android:text="待发货"
            android:textColor="#fff"
            android:textSize="36sp"
            android:gravity="center"
            android:paddingTop="9dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="9dp"
            android:background="@drawable/bg_corner_white_500"
            android:layout_width="200dp"
            android:layout_height="68dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/icon_my_add"
                android:layout_width="42dp"
                android:layout_height="42dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="60dp"
            android:layout_width="200dp"
            android:layout_height="90dp">
        <TextView
            android:text="待收货"
            android:textColor="#fff"
            android:textSize="36sp"
            android:gravity="center"
            android:paddingTop="9dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="9dp"
            android:background="@drawable/bg_corner_white_500"
            android:layout_width="200dp"
            android:layout_height="68dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/icon_my_add"
                android:layout_width="42dp"
                android:layout_height="42dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="我的订单"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@mipmap/icon_my_order"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:text="收货地址"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_receiving_address"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:text="我的物流"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_my_logistics"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:text="我的收藏"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_my_collection"
            android:layout_width="300dp"
            android:layout_height="300dp" />
        <TextView
            android:text="设置"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_setting"
            android:layout_width="300dp"
            android:layout_height="300dp" />
    </LinearLayout>
</LinearLayout>