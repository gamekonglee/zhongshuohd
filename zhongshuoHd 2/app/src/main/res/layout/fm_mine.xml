<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/colorPrimaryRed">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_cv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/touxian"
            />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_cv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级别"
            android:textColor="#e6e6e6"
            android:layout_below="@id/nickname_tv"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/order_rl"
                    style="@style/mine_item_style02"
                    >


                    <TextView
                        android:id="@+id/ordert_tv"
                        style="@style/mine_text_style"
                        android:layout_marginLeft="60dp"
                        android:text="@string/my_order"/>

                    <ImageView
                        android:id="@+id/arror02_iv"
                        style="@style/mine_image_arrow"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        style="@style/mine_text_style"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/arror02_iv"
                        android:text="@string/look_all_order"
                        android:textSize="20dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <RelativeLayout
                        android:id="@+id/payment_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/payment_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/payment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/payment_iv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="25dp"
                            android:text="@string/payment"/>

                        <TextView
                            android:id="@+id/unMessageReadTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/payment_iv"
                            android:background="@drawable/bg_unread_count"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:visibility="gone"

                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/delivery_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/delivery_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/delivery_iv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="25dp"
                            android:text="@string/delivery"/>

                        <TextView
                            android:id="@+id/unMessageRead02Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/delivery_iv"
                            android:background="@drawable/bg_unread_count"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:visibility="gone"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Receiving_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Receiving_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/receiving"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Receiving_iv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="25dp"
                            android:text="@string/Receiving"/>

                        <TextView
                            android:id="@+id/unMessageRead03Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/Receiving_iv"
                            android:background="@drawable/bg_unread_count"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="18dp"
                            android:visibility="gone"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/collect_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/collect_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/collet"/>

                <TextView
                    android:id="@+id/order_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/collect_iv"
                    android:text="@string/my_collet"/>

                <ImageView
                    android:id="@+id/arror_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                style="@style/view_style"
                />

            <RelativeLayout
                android:id="@+id/address_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/address_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/address"/>

                <TextView
                    android:id="@+id/address_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/address_iv"
                    android:text="@string/my_address"/>

                <ImageView
                    android:id="@+id/arror_address_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                style="@style/view_style"
                />
            <RelativeLayout
                android:id="@+id/stream_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/stream_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/stream"/>

                <TextView
                    android:id="@+id/stream_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/stream_iv"
                    android:text="@string/my_logistics"/>

                <ImageView
                    android:id="@+id/arror_stream_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                style="@style/view_style"
                />

            <RelativeLayout
                android:id="@+id/version_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/version_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_version"/>

                <TextView
                    android:id="@+id/version_name_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/version_iv"
                    android:text="@string/now_version"/>

                <ImageView
                    android:id="@+id/arror03_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/version_tv"
                    style="@style/mine_text_style"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/arror03_iv"
                    android:text="1.0"
                    android:textColor="@color/blue_4285f4"/>

            </RelativeLayout>

            <View
                style="@style/view_style"
                />

            <RelativeLayout
                android:id="@+id/clear_cache_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/clear_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/clear_cache"/>

                <TextView
                    android:id="@+id/clear_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/clear_iv"
                    android:text="@string/cleancache"/>

                <ImageView
                    android:id="@+id/arror04_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/cache_num_tv"
                    style="@style/mine_text_style"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/arror04_iv"
                    android:text="20K"
                    android:textColor="@color/blue_4285f4"/>

            </RelativeLayout>

            <View
                style="@style/view_style"
                />

            <RelativeLayout
                android:id="@+id/cotact_cutomer_rl"
                style="@style/mine_item_style02"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/message_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/cotact_customer"/>

                <TextView
                    android:id="@+id/message_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/message_iv"
                    android:text="@string/cotact_customer"/>

                <ImageView
                    android:id="@+id/arror05_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                style="@style/view_style"
                />

            <RelativeLayout
                android:id="@+id/out_login_rl"
                style="@style/mine_item_style02"
                >

                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/out_login"/>

                <TextView
                    android:id="@+id/share_tv"
                    style="@style/mine_text_style"
                    android:layout_toRightOf="@id/share_iv"
                    android:text="@string/out_login"/>

                <ImageView
                    android:id="@+id/arror06_iv"
                    style="@style/mine_image_arrow"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>