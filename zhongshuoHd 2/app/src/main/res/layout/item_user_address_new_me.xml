<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner_white_full_10">
    <RelativeLayout
        android:id="@+id/logistics_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/xx10"
        android:paddingLeft="@dimen/xx5"
        android:paddingRight="@dimen/xx10"
        >
        <TextView
            android:id="@+id/consignee_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consignee"
            android:textSize="@dimen/xx25"
            android:visibility="gone"
            android:textColor="@color/fontColor2"
            android:layout_toRightOf="@id/coordinate_iv"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_marginTop="@dimen/xx10"/>
        <TextView
            android:id="@+id/consignee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小五"
            android:textSize="@dimen/ss36"
            android:textColor="#444444"
            android:layout_toRightOf="@id/consignee_title_tv"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_marginTop="@dimen/xx10"/>
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="131358745454"
            android:textSize="@dimen/ss36"
            android:textColor="#444444"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/xx10"/>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省佛山市禅城区"
            android:textSize="@dimen/ss36"
            android:textColor="#444444"
            android:layout_toRightOf="@id/address_title_tv"
            android:layout_below="@id/consignee_tv"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_marginTop="@dimen/xx10"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/xx5"
        style="@style/view_style"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx120"
        android:paddingLeft="@dimen/xx5"
        android:paddingRight="@dimen/xx10"
        android:gravity="center_vertical">
        <bc.juhaohd.com.ui.view.TextViewPlus
            android:drawableLeft="@mipmap/cb_normal_cart"
            android:id="@+id/default_addr_tv"
            android:layout_marginLeft="@dimen/xx10"
            android:gravity="center"
            app:left_width="@dimen/xx60"
            app:left_height="@dimen/xx60"
            android:drawablePadding="@dimen/xx15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaults_address"
            android:textSize="@dimen/ss36"
            android:textColor="@color/orange_theme"
            />
        <bc.juhaohd.com.ui.view.TextViewPlus
            app:left_width="@dimen/xx60"
            app:left_height="@dimen/xx60"
            android:drawableLeft="@mipmap/icon_my_edit"
            android:id="@+id/edit_tv"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/ss36"
            android:layout_marginRight="@dimen/xx300"
            android:gravity="center"
            android:textColor="#444444"
            android:drawablePadding="@dimen/xx10"
            android:layout_alignParentRight="true"
            />
        <bc.juhaohd.com.ui.view.TextViewPlus
            app:left_width="@dimen/xx60"
            app:left_height="@dimen/xx60"
            android:drawableLeft="@mipmap/icon_delete_cart"
            android:id="@+id/delete_tv"
            android:layout_marginLeft="@dimen/xx10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_marginRight="@dimen/xx60"
            android:textSize="@dimen/ss36"
            android:drawablePadding="@dimen/xx10"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>