<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="@dimen/xx25"
            android:paddingBottom="@dimen/xx25"
            android:paddingLeft="@dimen/xx60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="已选择"
                android:textColor="#444444"
                android:textSize="@dimen/ss36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_count"
                android:text=" 0 "
                android:textSize="@dimen/ss36"
                android:textColor="@color/orange_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="件商品"
                android:textSize="@dimen/ss36"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/xx60"
                android:layout_marginTop="@dimen/xx50"
                android:text="商品总额 "
                android:textColor="#444444"
                android:textSize="@dimen/ss36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/totla_money_tv"
                android:text="00.00"
                android:textColor="#444444"
                android:textSize="@dimen/ss36"
                android:layout_marginLeft="@dimen/xx24"
                android:layout_marginTop="@dimen/xx50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/xx60"
                android:layout_marginTop="@dimen/xx42"
                android:text="应付总额 "
                android:textColor="#444444"
                android:textSize="@dimen/ss36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/summoney_tv"
                android:text="00.00"
                android:textColor="@color/orange_theme"
                android:textSize="@dimen/ss36"
                android:layout_marginLeft="@dimen/xx24"
                android:layout_marginTop="@dimen/xx42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/settle_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xx100"
            android:clickable="true"
            android:text="去结算"
            android:gravity="center"
            android:textSize="@dimen/ss42"
            android:layout_marginTop="@dimen/xx57"
            android:background="@drawable/bg_corner_bottom_orange"
            android:textColor="@android:color/white" />
    </LinearLayout>