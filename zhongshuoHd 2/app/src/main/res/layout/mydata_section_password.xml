<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_white_full_10"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <TextView
        android:text="修改密码"
        android:textSize="@dimen/ss36"
        android:textColor="#444444"
        android:layout_margin="@dimen/xx60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_old"
            android:padding="@dimen/xx20"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/xx150"
            android:layout_marginRight="@dimen/xx30"
            android:textSize="@dimen/ss36"
            android:hint="请输入新密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_new"
        android:padding="@dimen/xx20"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/xx150"
        android:layout_marginRight="@dimen/xx30"
        android:textSize="@dimen/ss36"
        android:hint="再次输入新密码"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_tel"
        android:padding="@dimen/xx20"
        android:layout_marginLeft="@dimen/xx150"
        android:layout_marginRight="@dimen/xx30"
        android:textSize="@dimen/ss36"
        android:hint="请输入绑定的手机号"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_code"
            android:padding="@dimen/xx20"
            android:layout_marginLeft="@dimen/xx150"
            android:layout_marginRight="@dimen/xx30"
            android:textSize="@dimen/ss36"
            android:hint="验证码"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <bc.juhaohd.com.ui.view.TimerButton
            android:id="@+id/tv_get_code"
            android:layout_marginRight="@dimen/xx30"
            android:textSize="@dimen/ss36"
            android:hint="@string/code_get_hint"
            android:text="@string/code_get"
            android:textColor="#444444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_save_password"
        android:layout_marginTop="@dimen/xx30"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="@dimen/ss48"
        android:background="@color/orange_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xx100" />

</LinearLayout>