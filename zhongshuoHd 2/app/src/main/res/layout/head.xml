<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/xx50"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/xx534"
            android:layout_height="@dimen/xx66"
            android:src="@mipmap/logo_juhao"/>
        <LinearLayout
            android:layout_marginTop="@dimen/xx5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <bc.juhaohd.com.ui.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地服务商"
                android:textColor="#FFFFFFFF"
                android:layout_marginLeft="@dimen/xx54"
                left_width="@dimen/xx30"
                left_height="@dimen/xx30"
                android:drawableLeft="@mipmap/service_mall"
                android:drawablePadding="@dimen/xx8"
                android:textSize="@dimen/ss20" />
            <TextView
                android:id="@+id/tv_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/ss24"
                android:layout_marginLeft="@dimen/xx54"
                android:layout_marginTop="@dimen/xx5"

                />
        </LinearLayout>



</LinearLayout>